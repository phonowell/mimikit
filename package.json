  "name": "mimikit",
  "packageManager": "pnpm@10.28.2",
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.0"
    }
  },
  "private": true,
  "scripts": {
    "fix:bom": "tsx scripts/remove-bom.ts",
    "fix:crlf": "tsx scripts/fix-crlf.ts",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "merge": "pnpm exec tsx scripts/merge-worktree.ts",

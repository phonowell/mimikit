{
  "name": "mimikit",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.2",
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.0"
    }
  },
  "scripts": {
    "start": "caffeinate -dimsu bin/mimikit",
    "start:windows": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\bin\\mimikit.ps1",
    "fn-to-arrow": "tsx scripts/fn-to-arrow.ts",
    "fix-crlf": "tsx scripts/fix-crlf.ts",
    "fix-bom": "tsx scripts/remove-bom.ts",
    "prompt:preview": "tsx scripts/preview-prompt.ts",
    "prompt:report": "tsx scripts/prompt-report.ts",
    "debug:loop": "tsx scripts/debug-loop.ts --auto-fix",
    "debug:repro": "tsx scripts/debug-repro.ts --auto-fix",
    "smoke:live": "tsx scripts/smoke-live.ts",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "vitest run"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@openai/codex-sdk": "0.93.0",
    "dompurify": "^3.3.1",
    "marked": "^17.0.1",
    "wink-bm25-text-search": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.19.7",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-unused-imports": "^4.3.0",
    "fire-keeper": "^0.0.235",
    "globals": "^17.2.0",
    "prettier": "^3.8.1",
    "ts-morph": "^23.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  }
}

    "prompt:report": "tsx scripts/prompt-report.ts",
    "start": "caffeinate -dimsu bin/mimikit",
    "start:windows": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\bin\\mimikit.ps1",
